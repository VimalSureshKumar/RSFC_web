@model IEnumerable<RSFC_web.Models.Manager>

@{
    ViewData["Title"] = "Index";
}

<h1 class="title">Managers</h1>
<body class="background"></body>
<p>
    <a asp-action="Create" class="create-button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manager_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager_Phone_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager_Nationality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manager_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager_Phone_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager_Nationality)
            </td>
            <td>
                <a asp-action="Edit" class="edit-button" asp-route-id="@item.ManagerId">Edit</a> |
                <a asp-action="Details" class="detail-button" asp-route-id="@item.ManagerId">Details</a> |
                <a asp-action="Delete" class="delete-button" asp-route-id="@item.ManagerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
