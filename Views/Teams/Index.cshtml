@model IEnumerable<RSFC_web.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h2 class="index">Teams</h2>
<body class="body">
<p>
    <a asp-action="Create" class="create-button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Team_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Managers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Team_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Managers.ManagerId)
            </td>
            <td>
                    <a asp-action="Edit" class="edit-button" asp-route-id="@item.TeamId">Edit</a> |
                    <a asp-action="Details" class="detail-button" asp-route-id="@item.TeamId">Details</a> |
                    <a asp-action="Delete" class="delete-button" asp-route-id="@item.TeamId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>